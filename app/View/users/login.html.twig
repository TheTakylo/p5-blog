{% extends 'layouts/base_layout.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="row my-5">
        <div class="col-md-6 offset-3">
            <div class="card">
                <div class="card-header">Connexion</div>
                <div class="card-body">
                    {% include 'partials/flash.html.twig' %}

                    {{ form_start(form) }}
                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form, 'email', 'Adresse email') }}
                            {{ form_errors(form, 'email') }}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form, 'password', 'Mot de passe') }}
                            {{ form_errors(form, 'password') }}
                        </div>
                    </div>
                    {{ form_row(form, '_csrf_token', '', csrf_token()) }}
                    <button type="submit" class="mt-3 btn btn-primary">Valider</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}