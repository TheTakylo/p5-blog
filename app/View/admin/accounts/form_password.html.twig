{% extends 'layouts/base_admin.html.twig' %}

{% block title %}
    {% if user.id %}
        Modifier un compte administrateur
    {% else %}
        Ajouter un compte administrateur
    {% endif %}
{% endblock %}

{% block content %}
    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <a href="{{ route('adminAccounts@edit', {id: user.id}) }}" class="btn btn-sm btn-outline-secondary"><span data-feather="arrow-left"></span></a>
        <h1 class="h2 ms-3">Retour</h1>
    </div>
    {{ form_start(form) }}

    <div class="card mt-4">
        <div class="card-header">Changer le mot de passe du compte: <strong>{{ user.email }}</strong></div>
        <div class="card-body">
            <div class="row mt-3">
                <div class="col-md-6">
                    {{ form_row(form, 'password', 'Nouveau mot de passe') }}
                    {{ form_errors(form, 'password') }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form, 'password_repeat', 'Répétez le mot de passe') }}
                    {{ form_errors(form, 'password_repeat') }}
                </div>
            </div>
            {{ form_row(form, '_csrf_token', '', csrf_token()) }}
            <button type="submit" class="mt-3 btn btn-primary">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}