{% extends 'layouts/base_admin.html.twig' %}

{% block title %}
    {% if user.id %}
        Modifier un compte administrateur
    {% else %}
        Ajouter un compte administrateur
    {% endif %}
{% endblock %}

{% block content %}
    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <a href="{{ route('adminAccounts@index') }}" class="btn btn-sm btn-outline-secondary"><span data-feather="arrow-left"></span></a>
        <h1 class="h2 ms-3">Retour à la liste</h1>
    </div>
    {{ form_start(form) }}
    <div class="row mt-3">
        <div class="col-md-12">
            {{ form_row(form, 'email', 'Adresse email') }}
            {{ form_errors(form, 'email') }}
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-6">
            {{ form_row(form, 'firstname', 'Prénom') }}
            {{ form_errors(form, 'firstname') }}
        </div>
        <div class="col-md-6">
            {{ form_row(form, 'lastname', 'Nom') }}
            {{ form_errors(form, 'lastname') }}
        </div>
    </div>
    {% if new is defined %}
        <div class="row mt-3">
            <div class="col-md-12">
                {{ form_row(form, 'password', 'Mot de passe') }}
                {{ form_errors(form, 'password') }}
            </div>
        </div>
    {% else %}
    <div class="card mt-4">
        <div class="card-header">Nouveau mot de passe</div>
        <div class="card-body">
            <a href="{{ route('adminAccounts@editPassword', {id: user.id}) }}" class="btn btn-secondary">Modifier le mot de passe</a>
        </div>
    </div>
    {% endif %}

    {{ form_row(form, '_csrf_token', '', csrf_token()) }}
    <button type="submit" class="mt-3 btn btn-primary">Valider</button>
    {{ form_end(form) }}
{% endblock %}