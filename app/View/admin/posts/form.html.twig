{% extends 'layouts/base_admin.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block head %}
    <script src="https://cdn.tiny.cloud/1/680gbxqmf0h6zgyhj1k2o972aksvf0uq6t3laj8yk6jumzi2/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#form-content',
            plugins: 'advlist autolink lists link charmap print preview hr anchor pagebreak',
            toolbar_mode: 'floating',
            language: 'fr_FR',
            language_url: 'https://raw.githubusercontent.com/TheTakylo/projet4-blog/master/public/js/admin/tinymce/langs/fr_FR.js',
        });
    </script>
{% endblock %}

{% block content %}
    <div class="d-flex flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <a href="{{ route('adminPosts@index') }}" class="btn btn-sm btn-outline-secondary"><span data-feather="arrow-left"></span></a>
        <h1 class="h2 ms-3">Ajouter un article</h1>
    </div>
    <form action="{{ route('adminPosts@add') }}" method="post">
        <div class="form-group">
            <label for="form-title">Titre</label>
            <input value="{{ post.title }}" type="text" id="form-title" name="form-title" class="form-control" placeholder="Titre">
        </div>
        <div class="form-group mt-3">
            <label for="form-content">Contenu</label>
            <textarea class="form-control" name="form-content" id="form-content" cols="30" rows="10">{{ form.content }}</textarea>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Valider</button>
    </form>
{% endblock %}